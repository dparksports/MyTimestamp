<Window x:Class="MyTimestamp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTimestamp"
        mc:Ignorable="d"
        Title="MyTimestamp - Video OCR" Height="600" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="250" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Padding="10" Background="#f0f0f0">
            <Button Content="Open Video..." Click="OpenVideo_Click" Padding="5,2" HorizontalAlignment="Left"/>
        </Border>

        <!-- Video Area -->
        <Border x:Name="VideoContainer" Grid.Row="1" Grid.Column="0" Background="Black" ClipToBounds="True">
            <Grid>
                <MediaElement x:Name="VideoPlayer" 
                              LoadedBehavior="Manual" 
                              ScrubbingEnabled="True"
                              MediaOpened="VideoPlayer_MediaOpened" />
                
                <!-- Visual ROI Overlay -->
                <!-- Interactive ROI Control -->
                <Canvas x:Name="OverlayCanvas">
                    <Grid x:Name="RoiGrid" Canvas.Left="0" Canvas.Top="0" Width="100" Height="50"
                          MouseLeftButtonDown="Roi_MouseLeftButtonDown"
                          MouseMove="Roi_MouseMove"
                          MouseLeftButtonUp="Roi_MouseLeftButtonUp">
                        
                        <!-- The selection box itself -->
                        <Rectangle Stroke="Red" StrokeThickness="2" Fill="#20FF0000" IsHitTestVisible="False"/>

                        <!-- Resize Handles -->
                        <Thumb x:Name="ThumbTopLeft" HorizontalAlignment="Left" VerticalAlignment="Top" Width="10" Height="10" Background="Red" Cursor="SizeNWSE" DragDelta="ResizeThumb_DragDelta" Tag="TopLeft" />
                        <Thumb x:Name="ThumbTopRight" HorizontalAlignment="Right" VerticalAlignment="Top" Width="10" Height="10" Background="Red" Cursor="SizeNESW" DragDelta="ResizeThumb_DragDelta" Tag="TopRight" />
                        <Thumb x:Name="ThumbBottomLeft" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="10" Height="10" Background="Red" Cursor="SizeNESW" DragDelta="ResizeThumb_DragDelta" Tag="BottomLeft" />
                        <Thumb x:Name="ThumbBottomRight" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="10" Height="10" Background="Red" Cursor="SizeNWSE" DragDelta="ResizeThumb_DragDelta" Tag="BottomRight" />
                    </Grid>
                </Canvas>
            </Grid>
        </Border>

        <!-- Scrubbing Controls -->
        <Grid Grid.Row="2" Grid.Column="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="CurrentTimeText" Text="00:00:00" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Slider x:Name="ScrubBar" Grid.Column="1" VerticalAlignment="Center" 
                    IsMoveToPointEnabled="True" 
                    Thumb.DragStarted="ScrubBar_DragStarted"
                    Thumb.DragCompleted="ScrubBar_DragCompleted"
                    ValueChanged="ScrubBar_ValueChanged"/>
            <TextBlock x:Name="TotalTimeText" Grid.Column="2" Text="00:00:00" VerticalAlignment="Center" Margin="10,0,0,0"/>
        </Grid>

        <!-- Settings Sidebar -->
        <Border Grid.Row="1" Grid.Column="1" Grid.RowSpan="3" Background="#eee" BorderBrush="#ccc" BorderThickness="1,0,0,0" Padding="10">
            <StackPanel>
                <TextBlock Text="Settings" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                
                <Button Content="Auto Find Timestamp" Click="AutoFind_Click" Margin="0,0,0,10" Background="#ddf"/>

                <GroupBox Header="ROI Settings (Percentage)">
                    <StackPanel Margin="5">
                        <TextBlock Text="X (%):" />
                        <TextBox x:Name="RoiX" Text="0.1" TextChanged="Roi_TextChanged"/>
                        <TextBlock Text="Y (%):" Margin="0,5,0,0"/>
                        <TextBox x:Name="RoiY" Text="0.1" TextChanged="Roi_TextChanged"/>
                        <TextBlock Text="Width (%):" Margin="0,5,0,0"/>
                        <TextBox x:Name="RoiW" Text="0.5" TextChanged="Roi_TextChanged"/>
                        <TextBlock Text="Height (%):" Margin="0,5,0,0"/>
                        <TextBox x:Name="RoiH" Text="0.1" TextChanged="Roi_TextChanged"/>
                        <Button Content="Preview ROI" Click="UpdateRoiPreview_Click" Margin="0,10,0,0"/>
                    </StackPanel>
                </GroupBox>

                <Button Content="Run OCR" Click="RunOCR_Click" Height="40" Margin="0,20,0,0"/>
                
                <TextBlock Text="OCR Results:" FontWeight="Bold" Margin="0,20,0,5"/>
                <TextBox x:Name="OcrResultText" Height="100" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
            </StackPanel>
        </Border>
        
        <!-- Detected Timestamps Display -->
        <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Detected Timestamp: " FontWeight="Bold"/>
            <TextBlock x:Name="ExtractedTimeText" Text="--" Foreground="Blue"/>
        </StackPanel>
    </Grid>
</Window>
